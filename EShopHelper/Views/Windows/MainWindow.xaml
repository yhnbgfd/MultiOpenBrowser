<Window
    x:Class="EShopHelper.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:EShopHelper.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EShopHelper"
    Width="1000"
    Height="650"
    MinWidth="600"
    MinHeight="400"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Height="28" Header="File">
                <MenuItem Click="MenuItem_Options_Click" Header="Options" />
                <MenuItem Click="MenuItem_Exit_Click" Header="Exit" />
            </MenuItem>
            <MenuItem Header="WebBrowser">
                <MenuItem Click="MenuItem_AddWebBrowser_Click" Header="Add WebBrowser" />
            </MenuItem>
            <MenuItem Header="WebEnvironment">
                <MenuItem Click="MenuItem_AddWebEnvironment_Click" Header="Add WebEnvironment" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="Check for Updates" />
                <MenuItem Header="About" />
            </MenuItem>
        </Menu>
        <UserControls:WebEnvironmentListUserControl x:Name="WebEnvironmentListUC" />
    </DockPanel>
</Window>
