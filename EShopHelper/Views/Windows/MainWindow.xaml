<Window
    x:Class="EShopHelper.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:UserControls="clr-namespace:EShopHelper.Views.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EShopHelper.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EShopHelper"
    Width="1000"
    Height="650"
    MinWidth="600"
    MinHeight="400"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Height="28" Header="文件">
                <MenuItem Click="MenuItem_Exit_Click" Header="退出" />
            </MenuItem>
            <MenuItem Header="浏览器设置">
                <MenuItem Click="MenuItem_AddWebBrowser_Click" Header="添加浏览器设置" />
            </MenuItem>
            <MenuItem Header="环境设置">
                <MenuItem Click="MenuItem_AddWebEnvironment_Click" Header="添加新环境" />
            </MenuItem>
            <MenuItem Header="关于" />
        </Menu>
        <UserControls:WebEnvironmentListUserControl x:Name="WebEnvironmentListUC" />
    </DockPanel>
</Window>
